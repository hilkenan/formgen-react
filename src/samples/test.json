						"columns": [{
							"controls": [{
								"id": "datetimepicker",
								"control_type": [ "DateTimePicker" ],
								"title": "DateTimePicker",
								"label_position": [
									"Top"
								],
								"info": "Test Info",
								"validators": [{
									"validator_type": [
										"Required"
									]},
									{
										"validator_type": [
											"MaxValue"
										],
										"message": "At 14:00",
										"value": 50400
								}]
							}]
						}]
					}]
				},
				{
					"id": "tab2",
					"control_type": ["Tab"],
					"title": "Tab 2",
					"config": {
						"itemIcon": "Edit"
					},
					"subrows": [{
						"columns": [{
							"controls": [{
								"id": "timepicker",
								"control_type": [ "TimePicker" ],
								"title": "TimePicker",
								"label_position": [
									"Top"
								],
								"info": "Test Info",
								"validators": [{
									"validator_type": [ "Required" ]
								}]
							},{
								"id": "pepople",
								"control_type": [ "PeoplePicker" ],
								"title": "PeoplePicker",
								"config": {
									"allowMultiple": true
								},
								"label_position": [
									"Top"
								],
								"validators": [{
									"validator_type": [ "Required" ]
								},{
									"validator_type": [ "MaxLength" ],
									"value": 2,
									"message": "Max 2 Persons"
								}],
								"info": "Test Info",
								"databinders": [ "filteredPeoples" ]
                    		}]
						}]
					}]
				}]
			}]
		}]
