	{
	"columns": [{
		"controls": [{
			"id": "submit",
			"control_type": ["SubmitButton"],
			"title": "Send",
			"title_trans": {
				"fr": "Send FR",
				"it": "Send IT",
				"de": "Send DE"
				}
			},
			{
			"id": "cancel",
			"control_type": ["CancelButton"],
			"title": "Cancel",
			"title_trans": {
				"fr": "Cancel FR",
				"it": "Cancel IT",
